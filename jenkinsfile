pipeline {
    agent any

    stages {

        stage('Clonar reposit√≥rio') {
            steps {
                git 'SEU_REPO_GITHUB'
            }
        }

        stage('Build Docker') {
            steps {
                sh 'docker build -t irmaotreino .'
            }
        }

        stage('Rodar container') {
            steps {
                sh 'docker stop irmaotreino || true'
                sh 'docker rm irmaotreino || true'
                sh 'docker run -d -p 3000:3000 --name irmaotreino irmaotreino'
            }
        }
    }
}
